@using Meowie.Components
@using Meowie.Lib.Pages
<Router AppAssembly="@typeof(Main).Assembly" AdditionalAssemblies="new []{typeof(Kittens).Assembly}">
	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(MeowieLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(MeowieLayout)">
			<p role="alert">Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>
